<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorAccent"
                                             tools:context=".MainActivity">

    <TextView
        android:id="@+id/selected_foodtype_text"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/marko_one"
        android:text="Chinese"
        android:textSize="42sp"
        app:layout_constraintBottom_toTopOf="@+id/add_Food_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_image"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/food_image"
        android:layout_width="169dp"
        android:layout_height="124dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dd_logo" />


    <EditText
        android:id="@+id/add_Food_text"
        android:layout_width="237dp"
        android:layout_height="55dp"
        android:layout_marginTop="148dp"
        android:hint="Seafood.."
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_image" />

    <Button
        android:id="@+id/add_food_button"
        android:layout_width="237dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:background="#6C9999"
        android:fontFamily="@font/marko_one"
        android:text="Confirm new food "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_Food_text" />

    <Button
        android:id="@+id/decide_button"
        android:layout_width="415dp"
        android:layout_height="45dp"
        android:background="#6C9999"
        android:fontFamily="sans-serif-black"
        android:text="Choose food for me!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>